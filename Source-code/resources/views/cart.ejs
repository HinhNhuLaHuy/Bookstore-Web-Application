                                                        <label for="quantity" style="display: none;">Quantity:</label>
                                                        <input type="number" id="quantity" step="1" min="1" max="999"
                                                            name="quantity" value="1" inputmode="numeric"
                                                            class="main__book-product-form-quantity-added-input"
                                                            placeholder="">
                                                        <button
                                                            class="main__book-product-form-quantity-added-button plus">
                                                            <i class="fa-solid fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                            <td
                                                class="main__cart-content-table-product-item main__cart-content-table-product-subtotal">
                                                <span class="main__cart-content-table-product-price-amount">
                                                    <span>$</span>
                                                    316.15
                                                </span>
                                            </td>
                                        </tr>

                                        <script>
                                            const input = document.getElementById("quantity");
                                            const minusButton = document.querySelector(".minus");
                                            const plusButton = document.querySelector(".plus");

                                            // Add click event listeners to the buttons
                                            minusButton.addEventListener("click", (event) => {
                                                event.preventDefault();
                                                if (input.value > 1) {
                                                    input.value = parseInt(input.value) - 1;
                                                }
                                            });

                                            plusButton.addEventListener("click", (event) => {
                                                event.preventDefault();
                                                if (input.value < 999) {
                                                    input.value = parseInt(input.value) + 1;
                                                }
                                            });

                                        </script>
                                    </tbody>
                                </table>
                            </form>
                            <div class="main__cart-content-collaterals">
                                <div class="main__cart-content-total">
                                    <h2>Cart totals</h2>
                                    <table class="main__cart-content-table">
                                        <tbody>
                                            <tr class="main__cart-content-table-subtotal">
                                                <th>Subtotal</th>
                                                <td class="main__cart-content-table-data">
                                                    <span class="main__cart-content-table-subtotal-data-amount">
                                                        <span>$</span>
                                                        316.15
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="main__cart-content-table-total">
                                                <th>Total</th>
                                                <td class="main__cart-content-table-data">
                                                    <span class="main__cart-content-table-total-data-amount">
                                                        <span>$</span>
                                                        316.15
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="main__cart-content-checkout">
                                        <a href="" class="main__cart-content-checkout-link">
                                            Proceed to checkout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </article>
                </main>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') -%>
