                                                                        <% /*eslint-disable-css-propertyvalueexpected*/ %>
                                                                        style="width: <%=
                                                                            sortedBooks[i].ratingWidth %>%;">
                                                                </span>
                                                            </div>
                                                            <span>
                                                                <%= sortedBooks[i].rating %>
                                                            </span>
                                                        </div>
                                                        <div class="books__list-detail-caption-author">
                                                            <% for (let j = 0; j < sortedBooks[i].authors.length && j < 3; j++) { %>
                                                                <a href="/story-sells/author/<%= sortedBooks[i].authors[j] %>">
                                                                    <%= sortedBooks[i].authors[j] %>
                                                                    <% if (j < sortedBooks[i].authors.length - 1) { %>
                                                                        , <%= " " %>
                                                                    <% } %>
                                                                </a>
                                                            <% } %>
                                                        </div>
                                                        <span class="books__list-detail-caption-price">
                                                            <% if (sortedBooks[i].sale_price) { %>
                                                                <del aria-hidden="true">
                                                                    <span class="books__list-detail-caption-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__list-detail-caption-price-amount-symbol">$</span>
                                                                            <%= sortedBooks[i].price %>
                                                                        </bdi>
                                                                    </span>
                                                                </del>
                                                                <ins>
                                                                    <span class="books__list-detail-caption-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__list-detail-caption-price-amount-symbol">$</span>
                                                                            <%= sortedBooks[i].sale_price %>
                                                                        </bdi>
                                                                    </span>
                                                                </ins>
                                                            <% } else { %>
                                                                <ins>
                                                                    <span class="books__list-detail-caption-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__list-detail-caption-price-amount-symbol">$</span>
                                                                            <%= sortedBooks[i].price %>
                                                                        </bdi>
                                                                    </span>
                                                                </ins>
                                                            <% } %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                                <div class="books__list-content-wrapper" id="onSale" style="display: none">
                                    <ul class="books__list-content-wrapper-list">
                                        <% for(let i = 0; i < onSaleBooks.length && i < 10; i++) { %>
                                            <li class="books__list-content-wrapper-list-item">
                                                <div class="books__list-detail">
                                                    <div class="books__list-detail-transition">
                                                        <div class="books__list-image">
                                                            <a href="/story-sells/book/<%= onSaleBooks[i]._id %>">
                                                                <img src="<%= onSaleBooks[i].cover_image %>" alt=""
                                                                     class="books__list-image-bookcover">
