<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StorySells: Where Imagination Comes to Life!</title>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="shortcut icon" type="image/x-icon" href="/img/Icon/Ico.png">
    <script src="https://kit.fontawesome.com/d8ded057c6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
</head>

<body>
<%- include('../Header/header-01.ejs', {genres: totalGenres, totalQuantity: totalQuantity}) -%>

<div class="content">
    <main id="content__main">
        <section class="books">
            <div class="books__content">
                <div class="books__content-left">
                    <div class="books__content-left-paddind">
                        <div class="books__categories"></div>
                        <div class="books__topweek">
                            <h5 class="books__topweek-title">Top <%= currentWeekBestSaleBooks.length %>
                                This Week
                            </h5>
                            <div class="books__topweek-content">
                                <ul class="books__topweek-list">
                                    <% for (let i = 0; i < currentWeekBestSaleBooks.length; i++) { %>
                                        <li class="books__topweek-list-item">
                                            <% let color; %>
                                            <% switch (i) {
                                                case 0:
                                                    color = "--color-pale-pink";
                                                    break;
                                                case 1:
                                                    color = "--color-luminous-vivid-amber";
                                                    break;
                                                case 2:
                                                    color = "--color-light-green-cyan";
                                                    break;
                                                case 3:
                                                    color = "--color-pale-cyan-blue";
                                                    break;
                                                case 4:
                                                    color = " --color-cyan-bluish-gray";
                                                    break;
                                                case 5:
                                                    color = "--color-lavender-blue";
                                                    break;
                                                default:
                                                    color = "--color-light-green-cyan";
                                                    break;
                                            } %>
                                            <div class="books__topweek-logo">
                                                <span class="books__topweek-logo-number"
                                                        <% /*eslint-disable css-propertyvalueexpected */ %>
                                                      style="background-color: var(<%= color %>)">
                                                    <%= i + 1 %>
                                                </span>
                                                <a href="/story-sells/book/<%= currentWeekBestSaleBooks[i]._id %>"
                                                   class="books__topweek-logo-link">
                                                    <img src="<%= currentWeekBestSaleBooks[i].cover_image %>" alt=""
                                                         class="books__topweek-logo-image">
                                                </a>
                                            </div>
                                            <div class="books__topweek-text">
                                                <h3 class="books__topweek-text-title">
                                                    <a href="/story-sells/book/<%= currentWeekBestSaleBooks[i]._id %>">
                                                        <%= currentWeekBestSaleBooks[i].book_title %>
                                                    </a>
                                                </h3>
                                                <div class="books__topweek-text-author">
                                                    <% for (let j = 0; j < currentWeekBestSaleBooks[i].authors.length && j < 3; j++) { %>
                                                        <a href="/story-sells/author/<%= currentWeekBestSaleBooks[i].authors[j] %>">
                                                            <%= currentWeekBestSaleBooks[i].authors[j] %>
                                                            <% if (j < currentWeekBestSaleBooks[i].authors.length - 1) { %>
                                                                , <%= " " %>
                                                            <% } %>
                                                        </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                        <div class="books__bestseller">
                            <h5 class="books__bestseller-title">Best seller</h5>
                            <div class="books__bestseller-content">
                                <% if (booksOfAll && booksOfAll.length > 0) { %>
                                    <ul class="books__bestseller-list">
                                        <% for (let i = 0; i < booksOfAll.length; i++) { %>
                                            <li class="books__bestseller-list-item">
                                                <div class="books__bestseller-list-item-product">
                                                    <div class="books__bestseller-logo">
                                                        <a href="/story-sells/book/<%= booksOfAll[i]._id %>"
                                                           class="books__bestseller-logo-link">
                                                            <img src="<%= booksOfAll[i].cover_image %>" alt=""
                                                                 class="books__bestseller-logo-image">
                                                        </a>
                                                    </div>
                                                    <div class="books__bestseller-text">
                                                        <h3 class="books__bestseller-text-title">
                                                            <a href="/story-sells/book/<%= booksOfAll[i]._id %>">
                                                                <%= booksOfAll[i].book_title %>
                                                            </a>
                                                        </h3>
                                                        <div class="books__bestseller-text-rate">
                                                            <div class="books__bestseller-text-rate-star"
                                                                 role="img"
                                                                 aria-label="Rated <%= booksOfAll[i].rating %> out of 5">
                                                                <span
                                                                        <% /* eslint-disable-css-propertyvalueexpected */ %>
                                                                        style="width: <%= booksOfAll[i].ratingWidth %>%;">
                                                                </span>
                                                            </div>
                                                            <span>
                                                                <%= booksOfAll[i].rating %>
                                                            </span>
                                                        </div>
                                                        <div class="books__bestseller-text-author">
                                                            <% for (let j = 0; j < booksOfAll[i].authors.length && j < 3; j++) { %>
                                                                <a href="/story-sells/author/<%= booksOfAll[i].authors[j] %>">
                                                                    <%= booksOfAll[i].authors[j] %>
                                                                    <% if (j < booksOfAll[i].authors.length - 1) { %>
                                                                        , <%= " " %>
                                                                    <% } %>
                                                                </a>
                                                            <% } %>
                                                        </div>
                                                        <span class="books__bestseller-text-price">
                                                            <% if (booksOfAll[i].sale_price) { %>
                                                                <del aria-hidden="true">
                                                                    <span class="books__bestseller-text-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__bestseller-text-price-amount-symbol">$</span>
                                                                            <%= booksOfAll[i].price %>
                                                                        </bdi>
                                                                    </span>
                                                                </del>
                                                                <ins>
                                                                    <span class="books__bestseller-text-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__bestseller-text-price-amount-symbol">$</span>
                                                                            <%= booksOfAll[i].sale_price %>
                                                                        </bdi>
                                                                    </span>
                                                                </ins>
                                                            <% } else { %>
                                                                <ins>
                                                                    <span class="books__bestseller-text-price-amount amount">
                                                                        <bdi>
                                                                            <span class="books__bestseller-text-price-amount-symbol">$</span>
                                                                            <%= booksOfAll[i].price %>
                                                                        </bdi>
                                                                    </span>
                                                                </ins>
                                                            <% } %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </li>
                                        <% } %>
                                    </ul>
                                <% } %>
                            </div>
                        </div>
                        <div class="books__sale">
                            <div class="books__sale-widget">
                                <span class="books__sale-widget-link">
                                    <div class="books__sale-widget-wrapper">
                                        <div class="books__sale-widget-wrapper-img">
                                            <img src="/img/background/background-07.jpg" alt="">
                                        </div>
                                        <div class="books__sale-widget-wrapper-overlay"></div>
                                    </div>
                                    <div class="books__sale-widget-content">
                                        <div class="books__sale-widget-content-text">
                                            <div class="books__sale-widget-content-text-subtitle">
                                                <span>
                                                    Best seller Books
                                                </span>
                                            </div>
                                            <h3 class="books__sale-widget-content-text-title">
                                                Sale 50%
                                            </h3>
                                            <a href="" class="books__sale-widget-content-text-button">
                                                Shop Now
                                                <i class="fa-solid fa-chevron-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </span>
                            </div>
                        </div>
                        <div class="books__total">
                            <div class="books__total-content">
                                <div class="books__total-content-wrapper">
                                    <div class="books__total-content-icon">
                                        <span class="books__total-content-icon-animation">
                                            <i class="fa-solid fa-book"></i>
                                        </span>
                                    </div>
                                    <div class="books__total-content-text">
