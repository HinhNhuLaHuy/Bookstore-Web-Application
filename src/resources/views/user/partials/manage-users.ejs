<section class="manage__users">
    <div class="manage__users-container">
        <div class="manage__users-header">
            <ul class="manage__users-header-list">
                <li class="manage__users-header-list-item manage__users-header-list-item-active">
                    <button type="button" class="manage__users-header-button">
                        <span class="manage__users-header-button-text">
                            Author
                        </span>
                        <span class="manage__users-header-button-quantity">
                            200
                        </span>
                    </button>
                </li>
                <li class="manage__users-header-list-item">
                    <button type="button" class="manage__users-header-button">
                        <span class="manage__users-header-button-text">
                            Admin
                        </span>
                        <span class="manage__users-header-button-quantity">
                            200
                        </span>
                    </button>
                </li>
                <li class="manage__users-header-list-item">
                    <button type="button" class="manage__users-header-button">
                        <span class="manage__users-header-button-text">
                            Shopper
                        </span>
                        <span class="manage__users-header-button-quantity">
                            200
                        </span>
                    </button>
                </li>
                <li class="manage__users-header-list-item">
                    <button type="button" class="manage__users-header-button">
                        <span class="manage__users-header-button-text">
                            Vendor
                        </span>
                        <span class="manage__users-header-button-quantity">
                            200
                        </span>
                    </button>
                </li>
            </ul>
            <div class="manage__users-header-quantity-result">
                <span>Showing</span>
                <span>1 - 9</span>
                <span>of</span>
                <span>1500</span>
                <span>result</span>
            </div>
        </div>
        <div class="manage__users-underline"></div>
        <div class="manage__users-search-field">
            <form action="" class="manage__users-search-form">
                <label>
                    <input type="text" class="manage__users-search-form-input" placeholder="Search user...">
                </label>
                <button type="submit" class="manage__users-search-form-icon">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <span class="visually-hidden" style="display: none">Search</span>
                </button>
            </form>
            <div class="manage__users-search-filter">
                <div class="manage__users-search-filter-display">
                    <ul class="manage__users-search-filter-display-list">
                        <li class="manage__users-search-filter-display-list-item manage__users-search-filter-display-list-item-active">
                            <button type="button" class="manage__users-search-filter-display-button">
                                <span class="manage__users-search-filter-display-icon">
                                    <i class="fa-solid fa-table-cells-large"></i>
                                </span>
                            </button>
                        </li>
                        <li class="manage__users-search-filter-display-list-item">
                            <button type="button" class="manage__users-search-filter-display-button">
                                <span class="manage__users-search-filter-display-icon">
                                    <i class="fa-solid fa-list-ul"></i>
                                </span>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="manage__users-search-filter-submit">
                    <form action="" class="manage__users-search-filter-submit-form">
                        <button type="submit" class="manage__users-search-filter-submit-button">
                            <span class="manage__users-search-filter-submit-icon">
                                <i class="fa-solid fa-filter"></i>
                            </span>
                            <span>Filter</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="manage__users-list">
            <table class="manage__users-list-table">
                    <thead class="manage__users-list-table-header">
                    <tr class="manage__users-list-table-header-row">
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <input type="checkbox" class="manage__users-list-table-header-checkbox">
                        </th>
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <span class="manage__users-list-table-header-text">
                                Name
                            </span>
                        </th>
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <span class="manage__users-list-table-header-text">
                                Email
                            </span>
                        </th>
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <span class="manage__users-list-table-header-text">
                                Phone Number
                            </span>
                        </th>
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <span class="manage__users-list-table-header-text">
                                Account Tier
                            </span>
                        </th>
                        <th class="manage__users-list-table-header-cell" scope="row">
                            <span class="manage__users-list-table-header-text">
                                Time
                            </span>
                        </th>
                    </tr>
                </thead>
                <tbody class="manage__users-list-table-body">
                    <tr class="manage__users-list-table-body-row">
                        <td class="manage__users-list-table-body-cell">
                            <input type="checkbox" class="manage__users-list-table-body-checkbox">
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <figure class="manage__users-list-table-body-cell-content-figure">
                                    <img src="<%= customerData.customer_avatar %>" alt="" class="manage__users-list-table-body-cell-content-figure-avatar">
                                </figure>
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_firstName + " " + customerData.customer_lastName %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_email %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_phoneNo %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_role %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.updatedAt.toLocaleString('en-US', {
                                            year: 'numeric',
                                            month: '2-digit',
                                            day: '2-digit',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </span>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr class="manage__users-list-table-body-row">
                        <td class="manage__users-list-table-body-cell">
                            <input type="checkbox" class="manage__users-list-table-body-checkbox">
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <figure class="manage__users-list-table-body-cell-content-figure">
                                    <img src="<%= customerData.customer_avatar %>" alt="" class="manage__users-list-table-body-cell-content-figure-avatar">
                                </figure>
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_firstName + " " + customerData.customer_lastName %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_email %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_phoneNo %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.customer_role %>
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="manage__users-list-table-body-cell">
                            <div class="manage__users-list-table-body-cell-content">
                                <div class="manage__users-list-table-body-cell-content-text">
                                    <span>
                                        <%= customerData.updatedAt.toLocaleString('en-US', {
                                            year: 'numeric',
                                            month: '2-digit',
                                            day: '2-digit',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </span>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="manage__users-navigation">
        <ul class="manage__users-navigation-list">
            <li class="manage__users-navigation-list-item">

            </li>
        </ul>
    </div>
</section>

<script>
    const manageUsers = document.querySelectorAll('.manage__users-header-list-item');

    manageUsers.forEach(item => {
        item.addEventListener('click', () => {
            manageUsers.forEach(item => {
                item.classList.remove('manage__users-header-list-item-active');
            });

            item.classList.add('manage__users-header-list-item-active');
        });
    });
</script>